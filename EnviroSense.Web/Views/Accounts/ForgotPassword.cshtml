@model EnviroSense.Web.ViewModels.Accounts.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-10 col-sm-8 col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4"
                 style="background: linear-gradient(to bottom, #d6eaff, #ffffff);">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4 text-primary fw-bold">Forgot Password</h2>

                    @if (ViewBag.SendEmailMessage != null)
                    {
                        <div class="alert alert-primary text-center mt-3" role="alert">
                            @ViewBag.SendEmailMessage
                        </div>
                    }

                    <form asp-controller="Accounts" asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email address</label>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="Enter your email"
                                   required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">Reset Password</button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center small">
                        <a asp-action="SignIn" class="fw-semibold text-primary">Back to Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>