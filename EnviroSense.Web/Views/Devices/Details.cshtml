@model EnviroSense.Web.ViewModels.Devices.DeviceViewModel

@{
    ViewData["Title"] = "Device Details";
    ViewBag.bodyclass = "Device_details_page_bg";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title mb-0">@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Last Update</dt>
            <dd class="col-sm-9">@Model.UpdatedAt.ToString("F")</dd>

            <dt class="col-sm-3">Created Date</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("F")</dd>
        </dl>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title mb-0">API Keys</h5>
    </div>
    <div class="card-body">
        @if (Model.ApiKeys.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>DeviceName</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var k in Model.ApiKeys)
                    {
                        <tr>
                            <td>@k.Name</td>
                            <td>
                                @if (k.DisabledAt.HasValue)
                                {
                                    <span class="badge bg-danger">Disabled</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-controller="DeviceApiKeys" asp-route-id="@k.Id" class="btn btn-primary btn-sm">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No API keys found for this device.</p>
        }
    </div>
</div>


<div class="mt-3">
    <a href="@Url.Action("Measurements", "Devices", new { deviceId = Model.Id })" class="btn btn-info">View Measurements</a>
    <a href="@Url.Action("Create", "DeviceApiKeys", new { deviceId = Model.Id })" class="btn btn-success">Create API Key</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
