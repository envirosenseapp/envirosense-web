@model EnviroSense.Web.ViewModels.Devices.DeviceViewModel

@{
    ViewData["Title"] = "Device Details";
}

<div class="card shadow-lg rounded-4 mb-4">
    <div class="card-header bg-primary text-white rounded-top-4">
        <h4 class="card-title mb-0 fw-bold">@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">ID</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4 fw-semibold">Last UpDate</dt>
            <dd class="col-sm-8">@Model.UpdatedAt.ToString("F")</dd>

            <dt class="col-sm-4 fw-semibold">Created Date</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("F")</dd>
        </dl>
    </div>
</div>

<div class="card shadow-lg rounded-4 mb-4">
    <div class="card-header bg-secondary text-white rounded-top-4">
        <h5 class="card-title mb-0 fw-semibold">API Keys</h5>
    </div>
    <div class="card-body">
        @if (Model.ApiKeys.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var k in Model.ApiKeys)
                        {
                            <tr>
                                <td class="fw-semibold">@k.Name</td>
                                <td>
                                    @if (k.DisabledAt.HasValue)
                                    {
                                        <span class="badge bg-danger">Disabled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-controller="DeviceApiKeys" asp-route-id="@k.Id" class="btn btn-outline-primary btn-sm shadow-sm">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted fst-italic mb-0">No API keys found for this device.</p>
        }
    </div>
</div>

<div class="d-flex flex-wrap gap-2 mb-5">
    <a href="@Url.Action("Measurements", "Devices", new { deviceId = Model.Id })" class="btn btn-info shadow-sm">
        View Measurements
    </a>
    <a href="@Url.Action("Create", "DeviceApiKeys", new { deviceId = Model.Id })" class="btn btn-success shadow-sm">
        Create API Key
    </a>
    <a href="@Url.Action("Index")" class="btn btn-secondary shadow-sm">
        Back to List
    </a>
</div>
