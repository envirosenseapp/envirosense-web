@model EnviroSense.Web.ViewModels.Devices.DeviceViewModel

@{
    ViewData["Title"] = "Device Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <div class="card">
        <div class="card-header">
            Device Information
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Device Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Last Update</dt>
                <dd class="col-sm-9">@Model.UpdatedAt</dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedAt</dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a href="@Url.Action("Measurements", "Devices", new { deviceId = Model.Id })" class="btn btn-primary">View Measurements</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
