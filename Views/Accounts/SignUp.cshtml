@model EnviroSense.Web.ViewModels.Accounts.SignUpViewModel
@{
}

<form asp-controller="Accounts" asp-action="SignUp" method="post">

    <label asp-for="Email">Email</label><br>
    @if (ViewBag.EmailValidator != null)
    {
        <p style="color: red;">@ViewBag.EmailValidator</p>
    }
    <input type="email" asp-for="Email" id="email" required><br>
    <label asp-for="Password">password</label><br>
    <input type="password" asp-for="Password" id="password" minlength="8" required><br>
    @if (ViewBag.PasswordDontMatch != null)
    {
        <p style="color: red;">@ViewBag.PasswordDontMatch</p>
    }
    <label asp-for="ConfirmPassword">Confirm password </label><br>
    <input type="password" asp-for="ConfirmPassword" id="confirmPassword" minlength="8" required><br>
    <button type="submit">SignUp</button>

</form>
