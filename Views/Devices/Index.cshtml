@model List< EnviroSense.Web.ViewModels.Devices.DeviceViewModel>
@{
    ViewData["Title"] = "Device Page";
}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var device in Model)
        {
            <tr>
                <td>@device.Name</td>
                <td> <a href="@Url.Action("Details", "Devices", new { id = device.Id })" class="btn btn-primary">View</a>
                </td>

            </tr>
        }
    </tbody>
</table>
